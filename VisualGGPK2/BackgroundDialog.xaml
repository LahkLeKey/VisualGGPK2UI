<Window
    x:Class="VisualGGPK2.BackgroundDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Background Working"
    Width="400"
    Height="100"
    Closing="OnClosing"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Grid x:Name="background_working" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <TextBlock
            x:Name="MessageTextBlock"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            Text="starting . . ."
            TextWrapping="Wrap" />
    </Grid>
</Window>
